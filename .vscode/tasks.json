{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Server",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++11",
                "${workspaceFolder}/Server/Server.cpp",
                "${workspaceFolder}/Server/main.cpp",
                "-o",
                "${workspaceFolder}/Server/myserver"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Client",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++11",
                "${workspaceFolder}/Client/Client.cpp",
                "${workspaceFolder}/Client/main.cpp",
                "-o",
                "${workspaceFolder}/Client/myclient"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}
